# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

# Your domain name (replace with your actual domain)
domain_name = "yourdomain.com"

# Subdomain for your portfolio
subdomain_name = "portfolio"

# AWS region (us-east-1 recommended for ACM certificates with CloudFront)
aws_region = "us-east-1"

# Environment name
environment = "prod"

# CloudFront price class (affects cost and performance)
# PriceClass_100: US, Canada, Europe (cheapest)
# PriceClass_200: US, Canada, Europe, Asia, Middle East, Africa
# PriceClass_All: All edge locations (most expensive)
cloudfront_price_class = "PriceClass_100"

# Additional tags (optional)
tags = {
  Owner   = "YourName"
  Project = "Portfolio"
  Cost    = "Personal"
}